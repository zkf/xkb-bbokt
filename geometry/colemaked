// Addition to the /xkb/geometry/pc file: 
// pc105_AngleWide(Slash) ergonomic mod (by DreymaR, 2011)
xkb_geometry "pc105awide-sl" {
    include "pc(pc105)"

    description= "Generic 105 - AngleWide(/)Ergo mod";

    section.left= 19;
