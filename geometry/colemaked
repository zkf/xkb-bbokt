	row {
	    top= 20;
	    keys { { <TAB>, "TABK", color="grey20" },
		   <AD01>, <AD02>, <AD03>, <AD04>, <AD05>, 
		   <AD11>, <AD06>, <AD07>, <AD08>, <AD09>, 
		   <AD10>, <AB10>, { <RTRN>, "RTRN", color="grey20" }
	    };
	};
	row {
	    top= 39;
	    keys { { <CAPS>, "CAPS", color="grey20" },
		   <AC01>, <AC02>, <AC03>, <AC04>, <AC05>, 
		   <AD12>, <AC06>, <AC07>, <AC08>, <AC09>, 
		   <AC10>, <AC11>
	    };
	};
	row {
	    top= 58;
